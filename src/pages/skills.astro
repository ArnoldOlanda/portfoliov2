---
import Layout from '../layouts/Layout.astro';

const skills = [
  { name: 'HTML', img: '/src/assets/skills/html.png', category: 'Frontend' },
  { name: 'CSS', img: '/src/assets/skills/css.png', category: 'Frontend' },
  { name: 'JavaScript', img: '/src/assets/skills/javascript.png', category: 'Frontend' },
  { name: 'TypeScript', img: '/src/assets/skills/typescript.svg', category: 'Frontend' },
  { name: 'React', img: '/src/assets/skills/react.png', category: 'Frontend' },
  { name: 'React Native', img: '/src/assets/skills/react-native.png', category: 'Mobile' },
  { name: 'Vue.js', img: '/src/assets/skills/vue.png', category: 'Frontend' },
  { name: 'Tailwind CSS', img: '/src/assets/skills/tailwind.svg', category: 'Frontend' },
  { name: 'Node.js', img: '/src/assets/skills/node.png', category: 'Backend' },
  { name: 'Express.js', img: '/src/assets/skills/expressjs.svg', category: 'Backend' },
  { name: 'NestJS', img: '/src/assets/skills/nest.svg', category: 'Backend' },
  { name: 'Laravel', img: '/src/assets/skills/laravel.svg', category: 'Backend' },
  { name: 'Python', img: '/src/assets/skills/python.png', category: 'Backend' },
  { name: 'MongoDB', img: '/src/assets/skills/mongodb.svg', category: 'Database' },
  { name: 'MySQL', img: '/src/assets/skills/mysql.svg', category: 'Database' },
  { name: 'PostgreSQL', img: '/src/assets/skills/postgresql.svg', category: 'Database' },
  { name: 'Firebase', img: '/src/assets/skills/firebase.svg', category: 'Backend' },
  { name: 'Socket.IO', img: '/src/assets/skills/socketio.svg', category: 'Backend' },
  { name: 'Git', img: '/src/assets/skills/git.png', category: 'Tools' },
];
---

<Layout title="Habilidades :)">
  <div class="relative min-h-screen flex flex-col items-center pb-20">
    <div class="w-[60%] h-[10%] mt-32 mb-16 flex justify-center">
      <h4 class="text-6xl font-extrabold">
        MIS <span class="text-blue-400">HABILIDADES</span>
      </h4>
    </div>
    <div class="w-[75%] z-[20] mb-20">
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-8">
        {
          skills.map((skill) => (
            <div class="group relative bg-gray-800 rounded-2xl p-8 flex flex-col items-center justify-center gap-4 hover:bg-gray-700 transition-all duration-300 hover:scale-105 border border-gray-700 hover:border-blue-400">
              <div class="w-20 h-20 flex items-center justify-center">
                <img
                  src={skill.img}
                  alt={skill.name}
                  class="w-full h-full object-contain transition-transform duration-300 group-hover:scale-110"
                />
              </div>
              <h5 class="text-lg font-semibold text-center group-hover:text-blue-400 transition-colors">
                {skill.name}
              </h5>
              <span class="text-xs text-gray-400 group-hover:text-gray-300">
                {skill.category}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
